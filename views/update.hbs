<div class="container">
    <h2>Update a product</h2>
    {{#with Product}}
        <form action="/{{_id}}/update" method="post">
            <label for="manufacturer">branch:</label>
            <input type="text" name="manufacturer" id="manufacturer" value="{{manufacturer}}"><br><br>
            <label for="name">name:</label>
            <input type="text" id="name" name="name" value="{{name}}"><br><br>
            <label for="cover">cover:</label>
            <input type="text" id="cover" name="cover" value="{{cover}}" readonly="true"><br><br>
            <label for="basePrice">basePrice:</label>
            <input type="text" id="basePrice" name="basePrice" value="{{basePrice}}"><br><br>
            <label for="type">type</label>
            <input type="text" id="type" name="type" value="{{type}}"><br><br>
            <input type="submit" class="btn btn-primary" value="Save">
        </form>
    {{/with}}
    <a href="/"><button type="button" class="btn btn-danger" >Do not save</button></a>
</div>