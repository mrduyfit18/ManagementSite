<div class="flex">
    <div class="col-lg-6 card">
        <div class="card-header">
            <strong>Update a product</strong>
        </div>
        <div class="card-body card-block">
            {{#with Product}}
            <form action="/update/{{_id}}/save" method="post">
                <div class="row form-group">
                    <div class="col col-md-3"><label for="manufacturer">Branch:</label></div>
                    <div class="col-12 col-md-9">
                        <input type="text" name="manufacturer" id="manufacturer" value="{{manufacturer}}"
                            class="form-control">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="name">Name:</label></div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="name" name="name" value="{{name}}" class="form-control">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="cover">Image:</label></div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="cover" name="cover" value="{{cover}}" readonly="true"
                            class="form-control">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="basePrice">BasePrice:</label></div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="basePrice" name="basePrice" value="{{basePrice}}" class="form-control">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="type">Type</label></div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="type" name="type" value="{{type}}" class="form-control">
                    </div>
                </div>
        <div class="card-footer d-flex justify-content-around">
            <button type="submit" class="btn btn-primary btn-sm">
                <i class="fa fa-dot-circle-o"></i> Save
            </button>
            <a href="/"><button type="button" class="btn btn-danger btn-sm">Do not save</button></a>
        </div>
            </form>
            {{/with}}
        </div>
    </div>
</div>