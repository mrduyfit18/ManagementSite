{{#with order}}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card strpied-tabled-with-hover">
                    <div class="card-header ">
                        <h4 class="card-title">Chi tiết đơn hàng - #{{_id}}</h4>
                        <p>Ngày đặt hàng: {{convertDate dateModified}}</p>
                        <p>Khách hàng: {{user_id.name}} - Số điện thoại: <strong>{{contact_id.phone}}</strong></p>
                        <p>Trạng thái:
                            <select id="order-status" {{#eq status 'thành công'}}disabled{{/eq}}>
                                <option value="đang xử lý" {{#eq status 'đang xử lý'}}selected{{/eq}}>Đang xử lý</option>
                                <option value="đang giao hàng" {{#eq status 'đang giao hàng'}}selected{{/eq}}>Đang giao hàng</option>
                                <option value="thành công" {{#eq status 'thành công'}}selected{{/eq}}>Thành công</option>
                            </select>
                        </p>
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        <table class="table table-hover left-table">
                            <thead>
                            <th>Mã sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                            </thead>
                            <tbody>
                            {{#each listProducts}}
                                <tr>
                                    <td>
                                        <a href="/store/{{productID._id}}">{{productID._id}}</a>
                                    </td>
                                    <td>{{productID.name}}</td>
                                    <td>{{convertPrice productID.basePrice}}</td>
                                    <td>{{number}}</td>
                                    <td>{{convertPrice (multiply number productID.basePrice)}}</td>
                                </tr>
                            {{/each}}
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>Tổng tiền:</td>
                                <td>{{convertPrice totalCost}}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/with}}