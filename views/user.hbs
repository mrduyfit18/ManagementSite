
{{#with account}}
<form action="/users/{{_id}}/save" method="post" enctype="multipart/form-data">

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Edit Profile</h4>
                            </div>
                            <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Email address</label>
                                                <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Name</label>
                                                <input type="text" class="form-control" name="name" placeholder="Last Name" value="{{name}}">
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-info btn-fill pull-right">Update Profile</button>
                                    <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row form-group">
                            <div class="col col-md-3"><label for="cover">Ảnh đại diện:</label></div>
                            <div class="col-12 col-md-9">
                                <!--                         <input type="text" id="cover" name="cover" value="img/products/surface-pro.jpg" readonly="true" class="form-control">-->
                                <input type="file" name="avatar" id="cover" value="{{avatar}}">
                            </div>
                        </div>
                        <div class="row form-group">
                            <img src="{{avatar}}"  alt="cover" id="coverImage">
                        </div>
                    </div>
                </div>
            </div>
        </div>

</form>
{{/with}}
